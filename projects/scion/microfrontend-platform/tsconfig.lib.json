{
  "extends": "../../../tsconfig.json",
  "compilerOptions": {
    "outDir": "../../../out-tsc/lib",
    "declaration": true,
    "stripInternal": true,
    "inlineSources": true,
    "types": []
  },
  "angularCompilerOptions": {
    "annotateForClosureCompiler": true,
    "skipTemplateCodegen": true,
    "strictMetadataEmit": true,
    "fullTemplateTypeCheck": true,
    "strictInjectionParameters": true,
    "enableResourceInlining": true
  },
  "exclude": [
    "src/test.ts",
    "**/*.spec.ts"
  ],
  "typedocOptions": {
    "mode": "file",
    "out": "dist/typedoc/microfrontend-platform",
    "includeVersion": true,
    "listInvalidSymbolLinks": true,
    "excludeNotExported": true,
    "excludeProtected": false,
    "excludePrivate": true,
    "excludeExternals": true,
    "exclude": "**/Éµ*.ts",
    "toc": [
      "MicrofrontendPlatform",
      "MessageClient",
      "OutletRouter",
      "SciRouterOutletElement",
      "ManifestService",
      "ContextService",
      "FocusMonitor",
      "PreferredSizeService",
      "MessageInterceptor",
      "IntentInterceptor",
      "HostPlatformState",
      "PlatformConfigLoader",
      "PlatformPropertyService",
      "Beans",
      "Intention",
      "Intent",
      "CapabilityProvider",
      "ActivatorProvider",
      "ApplicationManifest",
      "ApplicationConfig",
      "PlatformConfigLoader",
      "PlatformConfig"
    ],
    "categoryOrder": [
      "Platform",
      "Messaging",
      "Routing"
    ],
    "categorizeByGroup": true,
    "defaultCategory": "Platform",
    "theme": "minimal"
  }
}
